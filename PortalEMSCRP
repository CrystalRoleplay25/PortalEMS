    <script>
        // Função para enviar email via Mailjet
        const sendMailjetEmail = async (formData) => {
            // Substitua pelas suas credenciais do Mailjet
            const MAILJET_API_KEY = '3114ae49ff8fc8668a33ba8f65b021d7';
            const MAILJET_SECRET_KEY = '32f804aad98a0f5c52561c2e1d29b9df';
            
            const emailData = {
                Messages: [
                    {
                        From: {
                            Email: "no-reply@sme-servidor.pt",
                            Name: "Portal de Recrutamento EMS"
                        },
                        To: [
                            {
                                Email: "crystal.roleplay.25@gmail.com
", // Email de destino
                                Name: "Recrutamento SME"
                            }
                        ],
                        Subject: `Nova Candidatura SME: ${formData.fullname}`,
                        HTMLPart: `
                            <h3>Nova Candidatura para o SME</h3>
                            <p><strong>Nome:</strong> ${formData.fullname}</p>
                            <p><strong>Idade:</strong> ${formData.age}</p>
                            <p><strong>Discord:</strong> ${formData.discord}</p>
                            <p><strong>ID da Personagem:</strong> ${formData.id}</p>
                            <p><strong>Experiência:</strong> ${formData.experience}</p>
                            <p><strong>Motivação:</strong> ${formData.why}</p>
                            <p><strong>Disponibilidade:</strong> ${formData.availability}</p>
                        `
                    }
                ]
            };
            
            try {
                const response = await fetch('https://api.mailjet.com/v3.1/send', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Basic ' + btoa(`${MAILJET_API_KEY}:${MAILJET_SECRET_KEY}`)
                    },
                    body: JSON.stringify(emailData)
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    return { success: true };
                } else {
                    throw new Error(data.Messages ? data.Messages[0].Errors[0].ErrorMessage : 'Erro desconhecido');
                }
            } catch (error) {
                console.error('Erro ao enviar email:', error);
                throw error;
            }
        };
        
        // Form submission with Mailjet
        document.getElementById('recruitment-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Mostrar spinner e desabilitar botão
            const spinner = document.getElementById('form-spinner');
            const submitButton = document.getElementById('submit-button');
            const successMessage = document.getElementById('success-message');
            spinner.style.display = 'block';
            successMessage.style.display = 'none';
            submitButton.disabled = true;
            
            // Coletar dados do formulário
            const formData = {
                fullname: document.getElementById('fullname').value,
                age: document.getElementById('age').value,
                discord: document.getElementById('discord').value,
                id: document.getElementById('id').value,
                experience: document.getElementById('experience').value,
                why: document.getElementById('why').value,
                availability: document.getElementById('availability').value
            };
            
            try {
                // Enviar email via Mailjet
                const result = await sendMailjetEmail(formData);
                
                if (result.success) {
                    // Mostrar mensagem de sucesso
                    successMessage.style.display = 'block';
                    
                    // Resetar formulário
                    this.reset();
                    
                    // Scroll to top
                    setTimeout(() => {
                        window.scrollTo({
                            top: 0,
                            behavior: 'smooth'
                        });
                    }, 1000);
                }
            } catch (error) {
                console.error('Erro ao enviar email:', error);
                alert('Ocorreu um erro ao enviar a candidatura. Por favor, tente novamente mais tarde.');
            } finally {
                spinner.style.display = 'none';
                submitButton.disabled = false;
            }
        });
        
        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>
